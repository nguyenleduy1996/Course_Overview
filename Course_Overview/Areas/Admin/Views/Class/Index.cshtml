@using LModels
@model IEnumerable<Class>

<div class="row">
    <h4 class="card-title">Class List</h4>
    <div class="text-end">
        <a class="btn btn-secondary" asp-action="Create" asp-area="Admin">
            <i class="bi bi-plus-circle"></i>
            Create a new Class
        </a>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th> ClassID </th>
                <th> ClassName</th>
                <th> Teacher</th>
                <th> Fee</th>
                <th> ClassType </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr id="topicRow_@item.ClassID">
                    <td class="py-1">@item.ClassID</td>
                    <td>@item.ClassName</td>
                    <td>@item.Teacher?.FullName</td>
                    <td>@item.Fee</td>
                    <td>@item.ClassType</td>
                   
                    <td>
                        <a class="btn btn-warning" asp-area="Admin" asp-route-id="@item.ClassID" asp-action="Update">
                            <i class="bi bi-pencil-fill"></i>
                            Update
                        </a>
                        <button class="btn btn-danger" onclick="deleteClasses('@item.ClassID')">
                            <i class="bi bi-trash3"></i>
                            Delete
                        </button>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>

@section scripts {
    @*Đoạn mã hiển thị thông báo alert*@
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/AdminLayout/assets/js/Notification.js"></script>
} 