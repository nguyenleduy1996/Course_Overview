@model LModels.ViewModels.CourseDetailCreateViewModel

<h1>Create Course Detail</h1>

<form asp-action="Create" method="POST">
    <input type="hidden" asp-for="CourseID" />

    <div class="form-group">
        <label asp-for="DetailType" class="control-label"></label>
        <select asp-for="DetailType" class="form-control" id="detailTypeSelect">
            <option value="">-- Select Detail Type --</option>
            <option value="FullStack">FullStack</option>
            <option value="FrontEnd">FrontEnd</option>
            <option value="BackEnd">BackEnd</option>
            <option value="Game">Game</option>
        </select>
        <span asp-validation-for="DetailType" class="text-danger"></span>
    </div>

    <div id="detailsFields"></div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="/AdminLayout/assets/js/jquery.cookie.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const detailTypeSelect = document.getElementById('detailTypeSelect');
            const detailsFields = document.getElementById('detailsFields');

            function updateFields() {
                const selectedType = detailTypeSelect.value;
                let fieldsHtml = '';

                switch (selectedType) {
                    case 'FullStack':
                        fieldsHtml = `
                                    <div class="form-group">
                                        <label for="Curriculum" class="control-label">Curriculum</label>
                                                <textarea name="Curriculum" class="form-control"></textarea>
                                    </div>
                                    <div class="form-group">
                                        <label for="TargetAudience" class="control-label">Target Audience</label>
                                                <textarea name="TargetAudience" class="form-control"></textarea>
                                    </div>
                                    <div class="form-group">
                                        <label for="Benefits" class="control-label">Benefits</label>
                                                <textarea name="Benefits" class="form-control"></textarea>
                                    </div>
                                    <div class="form-group">
                                        <label for="Certification" class="control-label">Certification</label>
                                                <textarea name="Certification" class="form-control"></textarea>
                                    </div>
                                `;
                                  break;

                    case 'FrontEnd':
                        fieldsHtml = `
                                    <div class="form-group">
                                        <label for="Technologies" class="control-label">Technologies</label>
                                        <textarea name="Technologies" class="form-control"></textarea>
                                    </div>
                                    <div class="form-group">
                                        <label for="LearningObjectives" class="control-label">Learning Objectives</label>
                                        <textarea name="LearningObjectives" class="form-control"></textarea>
                                    </div>
                                    <div class="form-group">
                                        <label for="Demand" class="control-label">Demand</label>
                                        <textarea name="Demand" class="form-control"></textarea>
                                    </div>
                                    <div class="form-group">
                                        <label for="Salary" class="control-label">Salary</label>
                                        <textarea name="Salary" class="form-control"></textarea>
                                    </div>
                                `;
                                 break;

                    case 'BackEnd':
                        fieldsHtml = `
                                    <div class="form-group">
                                        <label for="Languages" class="control-label">Languages</label>
                                        <textarea name="Languages" class="form-control"></textarea>
                                    </div>
                                    <div class="form-group">
                                        <label for="Frameworks" class="control-label">Frameworks</label>
                                        <textarea name="Frameworks" class="form-control"></textarea>
                                    </div>
                                    <div class="form-group">
                                        <label for="Databases" class="control-label">Databases</label>
                                        <textarea name="Databases" class="form-control"></textarea>
                                    </div>
                                    <div class="form-group">
                                        <label for="Architecture" class="control-label">Architecture</label>
                                        <textarea name="Architecture" class="form-control"></textarea>
                                    </div>
                                `;
                                break;

                    case 'Game':
                        fieldsHtml = `
                                    <div class="form-group">
                                        <label for="GameEngines" class="control-label">Game Engines</label>
                                        <textarea name="GameEngines" class="form-control"></textarea>
                                    </div>
                                    <div class="form-group">
                                        <label for="GameDesign" class="control-label">Game Design</label>
                                        <textarea name="GameDesign" class="form-control"></textarea>
                                    </div>
                                    <div class="form-group">
                                        <label for="ProgrammingLanguages" class="control-label">Programming Languages</label>
                                        <textarea name="ProgrammingLanguages" class="form-control"></textarea>
                                    </div>
                                    <div class="form-group">
                                        <label for="GameDevelopmentProcess" class="control-label">Game Development Process</label>
                                        <textarea name="GameDevelopmentProcess" class="form-control"></textarea>
                                    </div>
                                `;
                                break;

                    default:
                        fieldsHtml = '';
                        break;
                }

                detailsFields.innerHTML = fieldsHtml;
            }

            detailTypeSelect.addEventListener('change', updateFields);
            updateFields(); // Initialize fields based on the current selection
        });
    </script>
}
