@using LModels.Client
@model Slider

<div class="card shadow boder-0 mt-4">
	<div class="card-body p-4">
		<h2>Create Slider</h2>
		<form class="bg-gray" asp-action="Create" enctype="multipart/form-data">
			<div class="mb-3 mt-3 form-group">
				<label for="title">Title:</label>
				<input type="text" class="form-control"
					   placeholder="Enter Title" asp-for="Title">
				<span class="text-danger" asp-validation-for="Title"></span>
			</div>

			<div class="form-group">
				<label asp-for="Status" class="control-label"></label>
				<div class="form-check">
					<input asp-for="Status" class="form-check-input" type="checkbox" value="true" id="Status" checked>
					<label class="form-check-label" for="Status">
						Active
					</label>
				</div>
			</div>

			<div class="mb-3 mt-3 form-group">
				<label for="Description">Description:</label>
				<textarea type="text" class="form-control"
						  placeholder="Enter Description" asp-for="Description"></textarea>
				<span class="text-danger" asp-validation-for="Description"></span>
			</div>

			<div class="mb-3 mt-3">
				<label for="image">Image:</label>a
				<input type="file" class="form-control"
					   placeholder="Enter ImagePath" name="ImageFile">
				<span asp-validation-for="ImageFile" class="text-danger"></span>
			</div>
			<button type="submit" class="btn btn-secondary" asp-action="Index">Back</button>
			<button type="submit" class="btn btn-secondary">Submit</button>
		</form>
	</div>
</div>