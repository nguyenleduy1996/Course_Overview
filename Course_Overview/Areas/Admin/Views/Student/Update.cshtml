@using LModels
@model Student

<div class="card shadow boder-0 mt-4">
	<div class="card-body p-4">
		<h2>Update Student</h2>
		<form class="bg-gray" asp-action="Update" enctype="multipart/form-data">
			<input type="hidden" asp-for="StudentID">

			<div class="mb-3 mt-3 form-group">
				<label for="name">Full name:</label>
				<input type="text" class="form-control"
					   placeholder="Enter Full name" asp-for="Name">
				<span class="text-danger" asp-validation-for="Name"></span>
			</div>

			<div class="mb-3 mt-3 form-group">
				<label for="Email">Email:</label>
				<input type="email" class="form-control"
					   placeholder="Enter email" asp-for="Email">
				<span class="text-danger" asp-validation-for="Email"></span>
			</div>

			<div class="mb-3 mt-3 form-group">
				<label for="Phone">Phone:</label>
				<input type="number" class="form-control"
					   placeholder="Enter Phone" asp-for="Phone">
				<span class="text-danger" asp-validation-for="Phone"></span>
			</div>

			<div class="mb-3 mt-3 form-group">
				<label for="Address">Address:</label>
				<input type="text" class="form-control"
					   placeholder="Enter Address" asp-for="Address">
				<span class="text-danger" asp-validation-for="Address"></span>
			</div>

			<div class="mb-3 mt-3 form-group">
				<label for="DateOfBirth">Date Of Birthday:</label>
				<input type="datetime-local" class="form-control" asp-for="DateOfBirth">
				<span class="text-danger" asp-validation-for="DateOfBirth"></span>
			</div>

			<div class="mb-3 mt-3">
				<label for="image">Image:</label>
				<input type="file" class="form-control"
					   placeholder="Enter ImagePath" name="ImageFile">
			</div>

			<div class="mb-3 mt-3">
				<label for="image">Current  Image:</label>
				<input type="hidden" asp-for="ImagePath" name="ImagePath">
				<img src="~/@Model.ImagePath" width="100" class="img-thumbnail" />
			</div>
			<button type="submit" class="btn btn-secondary" asp-action="Index">Back</button>
			<button type="submit" class="btn btn-secondary">Submit</button>
		</form>
	</div>
</div>