@using LModels
@model AboutUs

<div class="card shadow boder-0 mt-4">
	<div class="card-body p-4">
		<h2>Update About</h2>
		<form class="bg-gray" asp-action="Update">
			<input type="hidden"  asp-for="AboutID">

			<div class="mb-3 mt-3 form-group">
				<label for="Title">Title:</label>
				<input type="text" class="form-control"
					   placeholder="Enter Title" asp-for="Title">
				<span class="text-danger" asp-validation-for="Title"></span>
			</div>

			<div class="mb-3 mt-3 form-group">
				<label for="Content">Content:</label>
				<textarea type="text" class="form-control"
						  placeholder="Enter Content" asp-for="Content" required></textarea>
			</div>

			<button type="submit" class="btn btn-secondary" asp-action="Index">Back</button>
			<button type="submit" class="btn btn-secondary">Submit</button>
		</form>
	</div>
</div>

@section scripts {
	<script>CKEDITOR.replace("Content")</script>

}