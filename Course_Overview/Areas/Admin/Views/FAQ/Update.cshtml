@using LModels
@model FAQ


<div class="card shadow boder-0 mt-4">
	<div class="card-body p-4">
		<h2>Update FAQ</h2>
		<form class="bg-gray" asp-action="Update">
			<input type="hidden"  asp-for="FAQID">

			<div class="mb-3 mt-3 form-group">
				<label for="Question">Question:</label>
				<input type="text" class="form-control"
					   placeholder="Enter question" asp-for="Question">
				<span class="text-danger" asp-validation-for="Question"></span>
			</div>

			<div class="mb-3 mt-3 form-group">
				<label for="Answer">Answer:</label>
				<input type="text" class="form-control"
					   placeholder="Enter Answer" asp-for="Answer">
				<span class="text-danger" asp-validation-for="Answer"></span>
			</div>


			<button type="submit" class="btn btn-secondary" asp-action="Index">Back</button>
			<button type="submit" class="btn btn-secondary">Submit</button>
		</form>
	</div>
</div>