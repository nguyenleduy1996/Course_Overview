@using LModels
@model Course


<div class="card shadow boder-0 mt-4">
	<div class="card-body p-4">
		<h2>Update course</h2>
		<form class="bg-gray" asp-action="Update" enctype="multipart/form-data">
			<input type="hidden" asp-for="CourseID">

			<div class="mb-3 mt-3 form-group">
				<label for="name">Name:</label>
				<input type="text" class="form-control"
					   placeholder="Enter Name" asp-for="CourseName">
				<span class="text-danger" asp-validation-for="CourseName"></span>
			</div>

			<div class="mb-3 mt-3 form-group">
				<label for="Description">Description:</label>
				<textarea type="text" class="form-control"
						  placeholder="Enter Description" asp-for="Description"></textarea>

				<span class="text-danger" asp-validation-for="Description"></span>
			</div>

			<div class="form-group">
				<label asp-for="CourseType" class="control-label"></label>
				<select asp-for="CourseType" class="form-control">
					<option value="">Select Course Type</option>
					<option value="FullStackCourseDetail">Full Stack Course</option>
					<option value="FrontEndCourseDetail">Front End Course</option>
					<option value="BackEndCourseDetail">Back End Course</option>
					<option value="GameCourseDetail">Game Course</option>
				</select>
				<span asp-validation-for="CourseType" class="text-danger"></span>
			</div>

			<div class="mb-3 mt-3">
				<label for="image">Image:</label>
				<input type="file" class="form-control"
					   placeholder="Enter ImagePath" name="ImageFile">
			</div>

			<div class="mb-3 mt-3">
				<label for="image">Current  Image:</label>
				<input type="hidden" asp-for="ImagePath" name="ImagePath">
				<img src="~/@Model.ImagePath" width="100" class="img-thumbnail" />
			</div>

			<button type="submit" class="btn btn-secondary" asp-action="Index">Back</button>
			<button type="submit" class="btn btn-secondary">Submit</button>
		</form>
	</div>
</div>
