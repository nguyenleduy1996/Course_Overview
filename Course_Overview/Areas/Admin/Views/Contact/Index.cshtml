@using LModels
@model IEnumerable<Contact>

<div class="row">
	<h4 class="card-title">Contact List</h4>
	<div class="text-end">
		<a class="btn btn-secondary" asp-action="Create" asp-area="Admin">
			<i class="bi bi-plus-circle"></i>
			Create a new contact
		</a>
	</div>

	<table class="table table-striped">
		<thead>
			<tr>
				<th> STT </th>
				<th> Brand name</th>
				<th> Address</th>
				<th> Phone </th>
				<th> Phone 1 </th>
				<th> Phone 2 </th>
				<th> Email </th>
				<th> Image </th>
				<th> Actions </th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr id="topicRow_@item.ContactID">
					<td class="py-1">@item.ContactID</td>
					<td>@item.BranchName</td>
					<td>@item.Address</td>
					<td>@item.Phone</td>
					<td>@item.Phone1</td>
					<td>@item.Phone2</td>
					<td>@item.Email</td>
					<td>
						<img src="~/@item.ImagePath" alt="@item.BranchName" 100px; height: 100px;" />
					</td>
					<td>
						<a class="btn btn-warning" asp-area="Admin" asp-route-id="@item.ContactID" asp-action="Update">
							<i class="bi bi-pencil-fill"></i>
							Update
						</a>
						<button class="btn btn-danger" onclick="deleteContact('@item.ContactID')">
							<i class="bi bi-trash3"></i>
							Delete
						</button>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>

@section scripts {
	@*Đoạn mã hiển thị thông báo alert*@
	<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
	<script src="~/AdminLayout/assets/js/Notification.js"></script>
}


