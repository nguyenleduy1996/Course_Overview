@using X.PagedList
@using X.PagedList.Mvc.Core
@model X.PagedList.IPagedList<LModels.ExModel.EX_Subject>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-1">
                    <div class="form-group row">
                        <button onclick="RenderModalAdd()" type="button" class="btn btn-success  btn-fw"> +</button>
                    </div>
                </div>
            </div>
            <h4 style="font-weight:bolder" class="card-title">List Subject</h4>
            <p class="card-description" style="height:30px"></p>
            <table class="table table-hover">
                <thead style="font-weight:bolder">
                    <tr>
                        <td>No #:</td>
                        <td>Subject Name</td>
                        <td>Action</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.SubjectID</td>
                            <td>@item.SubjectName</td>
                            <td>
                                <!-- Add actions here (e.g., Edit, Delete) -->
                               
                                <button onclick="RenderEdit(@item.SubjectID)" type="button" class="btn btn-warning mr-2">View&Edit</button>
                                <button onclick="Delete(@item.SubjectID)" type="button" class="btn btn-danger mr-2">Delete</button>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="dataTables_paginate paging_bootstrap_full_number pull-right" id="sample_1_paginate">
    @Html.PagedListPager(Model, pageNumber => Url.Action("PartialList", new { page = pageNumber }),
            new PagedListRenderOptions
    {
        Display = PagedListDisplayMode.IfNeeded,
        DisplayItemSliceAndTotal = true,
        UlElementClasses = new[] { "pagination" },
        LiElementClasses = new[] { "page-item" },
        PageClasses = new[] { "page-link" }
    })
</div>

