@model LModels.ViewModels.CourseDetailViewModel
<div class="container-fluid p-0 mb-5">
	<div class="row mb-4">
		<div class="owl-carousel header-carousel position-relative">
			@{
				var selectedSlider = Model.Sliders.FirstOrDefault(s => s.SliderID == Model.SpecificSliderId);
			}
			@if(selectedSlider != null) {
				<div class="owl-carousel-item position-relative">
					<img class="img-fluid" src="~/@selectedSlider.ImagePath" alt="@selectedSlider.Title" style="height: 600px">
					<div class="position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center" style="background: rgba(24, 29, 56, .7);">
						<div class="container">
							<div class="row justify-content-start">
								<div class="col-sm-10 col-lg-8">

									<h1 class="display-3 text-white animated slideInDown">@selectedSlider.Title</h1>
									<p class="fs-5 text-white mb-4 pb-2">@selectedSlider.Description</p>
									<a href="" class="btn btn-primary py-md-3 px-md-5 me-3 animated slideInLeft">Read More</a>
									<a href="" class="btn btn-light py-md-3 px-md-5 animated slideInRight">Join Now</a>
								</div>
							</div>
						</div>
					</div>
				</div>
			}
		</div>
	</div>
	<div class="container">
		<div class="row">
			<div class="col-3 sidebar bg-light">
				<h5 class="text-center">Education programming</h5>
				<ul class="text-center">
					<a href="#">Chương trình ADSE 2 năm</a> <br />
					<a href="#">Frontend Developer</a>
					<br />
					<a href="#">Backend Developer</a>
					<br />
				</ul>
			</div>
			<div class="col-9">
				<p>@Html.Raw(Model.Course.Description)</p>
				<!-- Add more course details as needed -->
			</div>
			 
		</div>
		
			<!-- New Section for Topics -->
			<div class="container mt-5">
				<div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
					@foreach (var topic in Model.Topics)
					{
						<div class="col">
							<div class="card h-100 Boder-custom">
								<!-- List of Topic -->
								<div class="position-relative overflow-hidden rounded-top-lg">
									<img class="img-fluid Boder-custom" style="height: 200px" src="~/@topic.ImagePath" alt="@topic.TopicName">
									<div class="w-100 d-flex justify-content-center position-absolute bottom-0 start-0 mb-4">
										<a asp-action="TopicDetail" asp-controller="Topic" asp-route-id="@topic.TopicID" class="flex-shrink-0 btn btn-sm btn-primary px-3 border-end" style="border-radius: 30px 0 0 30px;">Read More</a>
										<button type="button" class="flex-shrink-0 btn btn-sm btn-primary px-3" style="border-radius: 0 30px 30px 0;" data-bs-toggle="modal" data-bs-target="#joinNowModal" data-topic-name="@topic.TopicName">Join Now</button>
									</div>
								</div>
								<div class="text-center p-4 pb-0">
									<div class="mb-3">
										<small class="fa fa-star text-primary"></small>
										<small class="fa fa-star text-primary"></small>
										<small class="fa fa-star text-primary"></small>
										<small class="fa fa-star text-primary"></small>
										<small class="fa fa-star text-primary"></small>
										<small>(123)</small>
									</div>
									<h5 class="text-center">@topic.TopicName</h5>
								</div>
							</div>
						</div>
					}
				</div>
			</div>
		</div>	
	</div>

	
</div>


<!-- Modal Register Course HTML -->
<div class="modal fade" id="joinNowModal" tabindex="-1" aria-labelledby="joinNowModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="joinNowModalLabel">Register</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				<form id="joinNowForm" action="/Registration/Register" method="post">
					<div class="mb-3">
						<label for="fullName" class="form-label">Name</label>
						<input type="text" class="form-control" id="fullName" name="FullName" required>
					</div>
					<div class="mb-3">
						<label for="phoneNumber" class="form-label">Phone</label>
						<input type="tel" class="form-control" id="phoneNumber" name="PhoneNumber" required>
					</div>
					<div class="mb-3">
						<label for="email" class="form-label">Email</label>
						<input type="email" class="form-control" id="email" name="Email" required>
					</div>
					<div class="mb-3">
						<label for="topicName" class="form-label">Subject</label>
						<input type="text" class="form-control" id="topicName" name="TopicName" readonly>
					</div>
					<button type="submit" class="btn btn-primary">Submit</button>
				</form>
			</div>
		</div>
	</div>
</div>
@section scripts {
	<script src="~/js/CourseRegister.js"></script>
} 